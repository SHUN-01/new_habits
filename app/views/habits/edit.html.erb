<div id="main">
  <h1>習慣登録情報編集</h1>
  <%= form_with model: @habit, local: true do |f| %>
    <%= render "shared/error_messages", model: f.object %>
    <div class="habit_content_form">
      <%= f.label :content, "習慣名" %>
      <%= f.text_field :content, size: 30 %>
    </div>
    <div class="habit_record_type_form">
      <%= f.label :record_type, "習慣の種類" %>
      <%= f.radio_button :record_type, true %>チェックタイプ　<%= f.radio_button :record_type, false %>記録タイプ
    </div>

    <%# 公開範囲機能未実装　%>
    <%#= f.label :open_range, "公開範囲：" %>
    <%#= f.select :open_range, [["自分のみ", 0], ["友達のみ", 1], ["すべての人", 2]], prompt: "公開範囲を選択して下さい" %>

    <%= f.submit "保存" %>
  <% end %>
</div>

<div id="sidebar">
  <%= render partial: "shared/sidebar", locals: {show_edit_delete_button: false} %>
</div>